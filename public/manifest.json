{
  "name": "Query Pro - Complaint Management System",
  "short_name": "Query Pro",
  "description": "A comprehensive complaint management system with real-time tracking and resolution",
  "version": "2.0.0",
  "manifest_version": 3,
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#3b82f6",
  "background_color": "#ffffff",
  "screenshots": [
    {
      "src": "/screenshot1.png",
      "type": "image/png",
      "sizes": "192x192",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshot2.png",
      "type": "image/png",
      "sizes": "512x512",
      "form_factor": "wide"
    }
  ],
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "categories": ["productivity", "utilities"],
  "shortcuts": [
    {
      "name": "Submit Complaint",
      "short_name": "New Complaint",
      "description": "Submit a new complaint",
      "url": "/dashboard?page=new-complaint",
      "icons": [
        {
          "src": "/icon-shortcut.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "View Complaints",
      "short_name": "My Complaints",
      "description": "View your complaints",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icon-complaints.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Admin Dashboard",
      "short_name": "Admin",
      "description": "Admin dashboard",
      "url": "/admin-dashboard",
      "icons": [
        {
          "src": "/icon-admin.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif"],
        "video/*": [".mp4", ".webm", ".mov"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+complaint",
      "url": "/handle?complaint=%s"
    }
  ]
}
